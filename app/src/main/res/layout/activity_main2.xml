<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f2f5"
    tools:context=".Main2Activity">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/mtwo"
            android:gravity="center_vertical"
            android:text="Consistent Effort Leads to Success.."
            android:textAlignment="center"
            android:textColor="#faf8f7"
            android:textSize="30dp"
            android:textStyle="italic"
            android:layout_gravity="top"
             />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="-50dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/waves" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">


        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/butt"
            android:backgroundTint="#0a1471"
            android:onClick="partA"
            android:text="PART A"
            android:textColor="#f7faf6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/butt"
            android:backgroundTint="#0a1471"
            android:onClick="PartB"
            android:text="PART B"
            android:textColor="#f7faf6"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/butt"
            android:backgroundTint="#0a1471"
            android:onClick="PartC"
            android:text="PART C"
            android:textColor="#f7faf6"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"/>
        </RelativeLayout>

</LinearLayout>